skinparam state {
  StartColor #3e3c49
  BackgroundColor White
  BorderColor #3e3c49
  ArrowColor #3e3c49
  FontColor #3e3c49
  FontStyle Bold
}

{{ make_state(state_chart) }}
@enduml
