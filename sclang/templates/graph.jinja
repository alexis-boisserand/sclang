{% macro make_event_label(event_handler, transition) %}
{% if event_handler.event is not none 
   or transition.guard is not none
   or transition.actions %}
:
{%- if event_handler.event is not none %}
{{ event_handler.event }}
{%- endif %}
{%- if transition.has_else_guard %}
[else]
{%- elif transition.guard is not none %}
[{{ transition.guard }}]
{%- endif %}
{%- if transition.actions %}
 / {{ transition.actions|join('\\n') }}
{% endif %}
{% endif %}
{% endmacro -%}

{% macro make_state(state) %}
{% if state.states %}
[*] --> {{ state.states[0].unique_name }}
{% endif %}
{% if state.init_actions %}
{{ state.unique_name }} : init / {{ state.init_actions|join('\\n') }}
{% endif %}
{% if state.exit_actions %}
{{ state.unique_name }} : exit / {{ state.exit_actions|join('\\n') }}
{% endif %}
{% for substate in state.states %}
state {{ substate.unique_name }} {
    {{ make_state(substate) }}
}
{% for event_handler in substate.event_handlers %}
{% for transition in event_handler.transitions %}
{{ substate.unique_name }} --> {{ state_chart.state_paths[transition.target_path].unique_name }}{{ make_event_label(event_handler, transition) }}
{% endfor %}
{% endfor %}
{% endfor %}
{% endmacro -%}

@startuml
hide empty description
skinparam ArrowFontColor #ba4452
skinparam ArrowFontStyle Bold
skinparam BackgroundColor White
skinparam shadowing false

skinparam state {
  StartColor #3e3c49
  BackgroundColor White
  BorderColor #3e3c49
  ArrowColor #3e3c49
  FontColor #3e3c49
  FontStyle Bold
}
{{ make_state(state_chart) }}
@enduml
